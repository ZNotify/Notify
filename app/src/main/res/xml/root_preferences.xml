<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/setting_header">

        <EditTextPreference
            app:key="user_id"
            app:title="@string/user_id"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/other">
        <Preference
            app:key="version"
            app:summary="0.0.0"
            app:title="@string/version" />
    </PreferenceCategory>

</PreferenceScreen>